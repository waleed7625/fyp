<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
         <%if user_signed_in?%>
<td><%= link_to 'Show', user_product_path(current_user,product) %></td>
      <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

       <%if user_signed_in?%>

<%= link_to 'New Product', new_user_product_path(current_user) %>
 <%= link_to "Sign out", destroy_user_session_path, method: :delete%>
<%else%>
<%= link_to 'sign in', new_user_session_path%>
<%end%>