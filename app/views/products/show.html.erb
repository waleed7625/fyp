<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<%(0...@product.images.count).each do|image|%>
<div style="width:300px; height:300px;">
<%= image_tag(@product.images[image], style: "width:100%; height: auto")%>
</div>
<% end %>


<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<h2>Comments</h2>
<%@product.comments.each do |comment|%>
<p>

<strong>Titile:</strong>

<%=comment.commenter%>
</p>
<p>
<strong>Comment:</strong>
<%= comment.body %>
</p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [ @product, @product.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Edit', edit_user_product_path(@product) %> |
<%= link_to 'Back', user_products_path(@product) %>
